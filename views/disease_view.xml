<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_disease_tree" model="ir.ui.view">
        <field name="name">hr.hospital.disease.tree</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code_icd10"/>
                <field name="danger_level"/>
                <field name="is_contagious"/>
                <field name="parent_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_disease_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.form</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code_icd10"/>
                        <field name="parent_id"/> <field name="danger_level"/>
                        <field name="is_contagious"/>
                    </group>
                    <notebook>
                        <page string="Symptoms">
                            <field name="symptoms" nolabel="1"/>
                        </page>
                        <page string="Spread Region">
                            <field name="spread_region_ids"
                                   widget="many2many_tags"/>
                        </page>
                        <page string="Child Diseases">
                            <field name="child_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_disease_search" model="ir.ui.view">
        <field name="name">hr.hospital.disease.search</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code_icd10"/>
                <searchpanel>
                    <field name="parent_id" icon="fa-sitemap"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="hr_hospital_disease_action" model="ir.actions.act_window">
        <field name="name">Diseases</field>
        <field name="res_model">hr.hospital.disease</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hr_hospital_disease_search"/>
    </record>
</odoo>