<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="doctor_speciality_tree" model="ir.ui.view">
        <field name="name">doctor.speciality.tree</field>
        <field name="model">doctor.speciality</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="doctor_speciality_form" model="ir.ui.view">
        <field name="name">doctor.speciality.form</field>
        <field name="model">doctor.speciality</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active"/>
                        <field name="description" nolabel="1"
                               placeholder="Опис..."/>
                    </group>
                    <notebook>
                        <page string="Doctors">
                            <field name="doctor_ids" readonly="1">
                                <tree>
                                    <field name="full_name"/>
                                    <field name="license_number"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="doctor_speciality_action" model="ir.actions.act_window">
        <field name="name">Doctor Specialities</field>
        <field name="res_model">doctor.speciality</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>