<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="doctor_schedule_tree" model="ir.ui.view">
        <field name="name">doctor.schedule.tree</field>
        <field name="model">doctor.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="doctor_id"/>
                <field name="day_of_week"/>
                <field name="date"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="schedule_type"/>
            </tree>
        </field>
    </record>

    <record id="doctor_schedule_form" model="ir.ui.view">
        <field name="name">doctor.schedule.form</field>
        <field name="model">doctor.schedule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="doctor_id" required="1"/>
                        <field name="schedule_type" required="1"/>
                    </group>
                    <group string="Time">
                        <field name="date"/>
                        <field name="day_of_week"
                               attrs="{'invisible': [('date', '!=', False)]}"/>
                        <field name="start_time" widget="float_time"/>
                        <field name="end_time" widget="float_time"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="doctor_schedule_action" model="ir.actions.act_window">
        <field name="name">Doctor Schedules</field>
        <field name="res_model">doctor.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>