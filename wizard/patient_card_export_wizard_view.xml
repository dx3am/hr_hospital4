<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_card_export_wizard_form" model="ir.ui.view">
        <field name="name">patient.card.export.wizard.form</field>
        <field name="model">patient.card_export_wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="patient_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="language_id"/>
                    <field name="export_format" widget="radio"/>
                </group>
                <group>
                    <field name="include_diagnoses"/>
                    <field name="include_recommendations"/>
                </group>
                <footer>
                    <button name="action_export_card" string="Export"
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>

                <group attrs="{'invisible': [('file_data', '=', False)]}"
                       class="oe_mt16">
                    <field name="file_name" invisible="1"/>
                    <field name="file_data" filename="file_name"
                           nolabel="1" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_patient_card_export" model="ir.actions.act_window">
        <field name="name">Export Patient Card</field>
        <field name="res_model">patient.card_export_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id"
               ref="hr_hospital.model_hr_hospital_patient"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>